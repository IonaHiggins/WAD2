<html lang = "en">
    <head>
        {{>header}}
    </head>
    <body>
        <form action="/add" method="POST">
            <fieldset>
                    <h3>Add new Goal</h3>
                    <label>Goal Name:</label>
                    <input type = "text" id = "name" name = "name" required>
                    <br></br>

                    <label>Goal Type:</label>
                    <select name = "type">
                        <option value = "lifestyleGoal">Lifestyle Goal</option>
                        <option value = "fitnessGoal">Fitness Goal</option>
                        <option value = "nutritionGoal">Nutrition Goal</option>
                    </select>
                    <br></br>

                    <label>Goal Value</label>
                    <input type="text" id = "goalValue" name = "goalValue" required>
                    <br></br>
                    <label>Goal Date</label>
                    <input type ="date" id = "goalDate" name = "goalDate" required>
                    <br></br>
                    <button type ="reset">Reset</button>
                    <button type ="submit">Submit</button>
            </fieldset>
        </form>

        <form action="/close" method="GET">
            <fieldset>
                <h3>Close connection to database</h3>
                <button class="btn btn-primary" type="submit">Close connection</button>
                <br><br><br>
            </fieldset>
        </form>
    </body>
</html>
